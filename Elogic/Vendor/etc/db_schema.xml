<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="elogic_vendor_list" resource="default" engine="innodb" comment="ELogic List Of The Vendors">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="varchar" name="vendor_name" nullable="false" length="64" comment="Vendor Name"/>
        <column xsi:type="varchar" name="desc" nullable="false" length="1024" comment="Vendor Description"/>
        <column xsi:type="varchar" name="logo" nullable="true" length="255" comment="Vendor Featured Image"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
